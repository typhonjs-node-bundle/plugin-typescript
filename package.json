{
  "name": "@typhonjs-node-rollup/plugin-typescript",
  "description": "Provides an Oclif plugin to to configure @rollup/plugin-typescript for rollup-runner.",
  "version": "0.0.0",
  "author": "typhonrt",
  "bugs": "https://github.com/typhonjs-node-rollup/issues/issues",
  "type": "module",
  "dependencies": {
    "@endemolshinegroup/cosmiconfig-typescript-loader": "^3.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^7.0.0",
    "typhonjs-config-eslint": "^0.6.0"
  },
  "peerDependencies": {
    "rollup": "^2.x"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "src/loader/PluginLoader.js",
  "files": [
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/src"
  ],
  "homepage": "https://github.com/typhonjs-node-rollup/plugin-typescript",
  "keywords": [
    "oclif-plugin"
  ],
  "license": "MPL-2.0",
  "oclif": {
    "hooks": {
      "bundle:load:plugins": [
        "./src/hooks/bundle-load-plugins"
      ]
    }
  },
  "repository": "typhonjs-node-rollup/plugin-typescript",
  "scripts": {
    "eslint": "eslint .",
    "test": "nyc mocha --forbid-only \"test/**/*.test.js\""
  }
}
